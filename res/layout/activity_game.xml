<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8ebef"
    android:gravity="center"
    tools:context=".Game" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dip"
        android:scaleType="centerInside"
        android:src="@drawable/ic_title" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageView1"
        android:layout_marginTop="20dip"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/modeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="Normal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#454545"
            android:textStyle="bold|italic"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/normalMode"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_gravity="right"
                android:layout_marginRight="10dip"
                android:background="@drawable/normal_enabled"
                android:checked="true"
                android:textOff=" "
                android:textOn=" " />

            <ImageView
                android:id="@+id/timerMode"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/timer_disabled"
                android:checked="false"
                android:minWidth="48dip"
                android:textOff=" "
                android:textOn=" " />

            <ImageView
                android:id="@+id/limitedMode"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/limited_disabled"
                android:checked="false"
                android:minWidth="48dip"
                android:textOff=" "
                android:textOn=" " />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/playBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="25dip"
        android:background="#43c6ec"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="Play"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#eeeeee"
        android:textStyle="italic"
        android:typeface="serif" />

    <!-- android:background="#43c6ec" -->

    <Button
        android:id="@+id/tutorial"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playBtn"
        android:layout_marginTop="5dip"
        android:background="#3b5999"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="Tutorial"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#eeeeee"
        android:textStyle="italic"
        android:typeface="serif" />
    <!-- android:background="#3b5999" -->

    <Button
        android:id="@+id/menuOptions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tutorial"
        android:layout_marginTop="5dip"
        android:background="#1abc9c"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="Menu"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#eeeeee"
        android:textStyle="italic"
        android:typeface="serif" />
    <!-- android:background="#1abc9c" -->


    <!-- android:background="#9b59b6" -->

</RelativeLayout>