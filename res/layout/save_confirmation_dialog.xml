<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rateus_bkg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e8ebef"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/save_confirmation_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="Enjoying the app? Help us out and rate us in the Play Store. We&apos;ll be sure to keep the updates coming in return!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#404040"
            android:typeface="serif" />

        <Button
            android:id="@+id/saveNow"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/menu_button_default"
            android:text="OK, save it now"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:typeface="serif" />
        <!-- android:background="#66c9b5" -->

        <Button
            android:id="@+id/cancelSave"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/menu_button_default"
            android:text="Cancel"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:typeface="serif" />
    </LinearLayout>
    <!-- android:background="#66c9b5" -->

</RelativeLayout>